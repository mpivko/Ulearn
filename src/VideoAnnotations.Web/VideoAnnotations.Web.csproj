<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>netcoreapp2.2</TargetFramework>
		<RootNamespace>Ulearn.VideoAnnotations.Web</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Serilog">
			<Version>2.9.0</Version>
